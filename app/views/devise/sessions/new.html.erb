<div class="normal-signup col-md-4 col-sm-8">
    <h2 class="pop-header mb-5">Log into your account</h2>
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= f.error_notification %>
      <div class="errors msg"></div>
      <div class="form-inputs mt-4">
        <%= f.input :email,
                    required: true,
                    autofocus: true,
                    input_html: { autocomplete: "email" } %>
        <%= f.input :password,
                    required: true,
                    input_html: { autocomplete: "current-password" } %>
        <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
      </div>
      <div class="form-actions">
        <%= f.button :submit, "Log in", class:"pop-header mt-4" %>
      </div>
    <% end %>
    <span>
      OR
      <%= link_to user_linkedin_omniauth_authorize_path, id: "social-media-signup" do %>
        Sign in with LinkedIn <i class="fab fa-linkedin"></i>
      <% end %>
    </span>
  </div>
