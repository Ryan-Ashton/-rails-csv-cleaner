<div class="navbar navbar-expand-sm navbar-light navbar-lewagon fixed-top">

  <%= link_to root_path, class: "navbar-brand", id: "logo" do %>
    <i class="fab fa-cuttlefish logo"></i>
  <% end %>

  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
    <span class="navbar-toggler-icon"></span>
  </button>


  <div class="collapse navbar-collapse" id="navbarSupportedContent">
    <ul class="navbar-nav mr-auto">
      <li class="nav-item">
        <%= link_to "About", about_path, class: "nav-link" %>
      </li>
      <li class="nav-item">
        <%= link_to "FAQ", faq_path, class: "nav-link" %>
      </li>
      <% if user_signed_in? %>
        <li class="nav-item">
          <%= link_to "Dashboard", dashboard_path, class: "nav-link" %>
        </li>
        <li class="nav-item dropdown">
          <%= image_tag "https://encrypted-tbn0.gstatic.com/images?q=tbn:ANd9GcTEGSIEbvWCODJjqlWWfG_yJ6Ah3PiPNtlAPN6PHDrzMT_6PJ6l&s", class: "avatar dropdown-toggle", id: "navbarDropdown", data: { toggle: "dropdown" }, 'aria-haspopup': true, 'aria-expanded': false %>
          <div class="dropdown-menu dropdown-menu-right" aria-labelledby="navbarDropdown">
            <%= link_to "Clean a CSV", "/", class: "dropdown-item" %>
            <%= link_to "Log out", destroy_user_session_path, method: :delete, class: "dropdown-item" %>
          </div>
        </li>
      <% else %>
        <li class="nav-item" id="btn-signup">
         <a class="nav-link" href="new_user_registration_path" data-toggle="modal" data-target="#signupModal">
            Sign up
         </a>
        </li>
        <li class="nav-item">
          <a class="nav-link active" id="btn-login" href="new_user_session_path" data-toggle="modal" data-target="#loginModal">
            Log In
          </a>
        </li>
      <% end %>
    </ul>
  </div>
</div>

<!-- sign up modal-->
<% unless user_signed_in? %>
  <div class="modal fade" id="signupModal" tabindex="-1" role="dialog" aria-labelledby="signupModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <%= render "shared/modal_signup" %>
    </div>
  </div>
<% end %>

<!--Log in modal -->
<% unless user_signed_in? %>
  <div class="modal fade" id="loginModal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
      <%= render "shared/modal_login" %>
    </div>
  </div>
<% end %>
